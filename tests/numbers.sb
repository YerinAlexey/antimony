fn numbers_main() {
    log_test_stage("Testing numbers")
    // TODO: extract to functions

    // Test the "_" character
    let one_billion = 1_000_000_000

    // Test number systems 
    let dec = 255
    let hex = 0xFf
    let binary = 0b11111111
    let octal = 0o377

    assert(dec == 255)
    assert(hex == 255)
    assert(binary == 255)
    assert(octal == 255)

    test_operators()
}

fn test_operators() {
    println("test_operators")
    let x = 10
    x += 1
    x -= 2
    x *= 2
    x /= 2
    assert(x == 9)
}